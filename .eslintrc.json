{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
            "version": "18.2.0"
        }
    },
  "rules": {
    "@typescript-eslint/semi": ["error", "never"]
  }
}
